{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "d2r-rust",
  "version": "0.2.1",
  "identifier": "com.d2rmultiplay.ui",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "D2R Multi",
        "label": "main",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "maximizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://update.squareuncle.com/d2r-rust/latest.json"
      ],
      "pubkey": "RWS4hxP/qyeo0W+0PAqsq1tkBC0USvx87IRKLhepFlxm+rzKVRM2Gv21"
    }
  }
}